@page
@model ProjetoAssembly_Final.Pages.PerfilEditModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Configurações de Perfil"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/perfilEdit.css" asp-append-version="true"/>
}

<div class="profile-edit-wrapper">
    <div class="edit-header-top">
        <h2><i class="fa-solid fa-user-gear"></i> @Localizer["Configurações da Conta"]</h2>
        <p>@Localizer["Gere as tuas informações pessoais e preferências."]</p>
    </div>

    <div class="edit-card">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="CurrentUser.UserId" />
            <input type="hidden" asp-for="CurrentUser.CreatedAt" />
            <input type="hidden" asp-for="CurrentUser.PasswordHash" />

            <div class="edit-grid-layout">

                <div class="photo-edit-section">
                    <div class="avatar-wrapper">
                        <img src="/img/@(string.IsNullOrEmpty(Model.CurrentUser.ProfilePicture) ? "user.icon.png" : Model.CurrentUser.ProfilePicture)"
                             id="previewImg" class="profile-edit-img" alt="Avatar" />

                        <label for="foto" class="btn-change-photo">
                            <i class="fa-solid fa-camera"></i>
                        </label>
                        <input type="file" id="foto" name="ProfilePicture" style="display:none;" accept="image/*" onchange="previewFile()" />
                    </div>
                    <p class="photo-hint">@Localizer["Alterar foto de perfil"]</p>
                </div>

                <div class="inputs-sections">
                    <div class="edit-form-group">
                        <label asp-for="CurrentUser.UserName">@Localizer["Nome de Utilizador"]</label>
                        <input asp-for="CurrentUser.UserName" class="edit-input" placeholder="@Localizer["Teu nome"]" />
                        <span asp-validation-for="CurrentUser.UserName" class="text-danger"></span>
                    </div>

                    <div class="edit-form-group">
                        <label asp-for="CurrentUser.Email">@Localizer["E-mail"]</label>
                        <input asp-for="CurrentUser.Email" class="edit-input" />
                        <span asp-validation-for="CurrentUser.Email" class="text-danger"></span>
                    </div>

                    <div class="edit-actions">
                        <button type="submit" class="btn-save">
                            <i class="fa-solid fa-floppy-disk"></i> @Localizer["Guardar Alterações"]
                        </button>
                        <a asp-page="/perfil" class="btn-back">@Localizer["Cancelar"]</a>
                    </div>
                </div>
            </div>
        </form>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> @* Para validação no lado do cliente *@
    <script>
        function previewFile() {
            const preview = document.querySelector('#previewImg');
            const file = document.querySelector('#foto').files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        }
    </script>
}
