@page
@model ProjetoAssembly_Final.Pages.PerfilEditModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Configurações de Perfil"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/perfilEdit.css" asp-append-version="true"/>
}

<div class="container-edit-perfil">
    <div class="header-edit-top">
        <h2><i class="fa-solid fa-user-gear"></i> @Localizer["Configurações da Conta"]</h2>
        <p>@Localizer["Gere as tuas informações pessoais e preferências."]</p>
    </div>

    <div class="edit-card">
        <form method="post" enctype="multipart/form-data">
            <div class="edit-grid-layout">

                <div class="foto-edit-section">
                    <div class="avatar-wrapper">
                        <img src="~/img/user.icon.png" id="previewImg" class="img-edit-perfil" alt="Avatar" />
                        <label for="foto" class="btn-change-photo">
                            <i class="fa-solid fa-camera"></i>
                        </label>
                        <input type="file" id="foto" name="FotoPerfil" style="display:none;" accept="image/*" onchange="previewFile()"/>
                    </div>
                    <p class="photo-hint">@Localizer["Alterar foto de perfil"]</p>
                </div>

                <div class="inputs-sections">
                    <div class="form-group-edit">
                        <label>@Localizer["Nome de Utilizador"]</label>
                        <input type="text" class="input-edit" value="Frederico" placeholder="@Localizer["Teu nome"]" />
                    </div>

                    <div class="form-group-edit">
                        <label>@Localizer["E-mail"]</label>
                        <input type="email" class="input-edit" value="fredericocrf87@hotmail.com" />
                    </div>

                    <div class="edit-actions">
                        <button type="submit" class="btn-save">
                            <i class="fa-solid fa-floppy-disk"></i> @Localizer["Guardar Alterações"]
                        </button>
                        <a asp-page="/perfil" class="btn-back">@Localizer["Cancelar"]</a>
                    </div>
                </div>
            </div>
        </form>
    </div>    
</div>

@section Scripts {
    <script>
        function previewFile() {
            const preview = document.querySelector('#previewImg');
            const file = document.querySelector('#foto').files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        }
    </script>
}
