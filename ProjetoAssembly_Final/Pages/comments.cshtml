@page "{RecipeId:int?}"
@model ProjetoAssembly_Final.Pages.commentsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Comentários";
}

<link rel="stylesheet" href="~/css/comments.css" />

<main class="container">
    <section class="comentario-header">
        <h1 class="section-title">Comentários da Receita</h1>
        <p class="text-muted">Partilhe a sua experiência ou tire dúvidas com a comunidade.</p>
    </section>

    <div id="container-comentarios" class="comentarios-lista">
        @if(Model.ListComments != null && Model.ListComments.Any())
        {
            @foreach (var c in Model.ListComments)
            {
                <article class="comentario-card">
                    <div class="comment-user-info">
                        <div class="user-avatar-circle">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div class="user-details">
                            <strong>Utilizador #@c.UserId</strong>
                            <div class="stars-display">
                                @for(int i = 0; i < c.Rating; i++)
                                {
                                    <i class="fa-solid fa-star checked"></i>
                                }
                                @for(int i = c.Rating; i < 5; i++)
                                {
                                    <i class="fa-regular fa-star"></i>
                                }
                            </div>
                        </div>
                        <time class="comment-date">@c.CreatedAt.ToString("dd MM yyyy")</time>
                    </div>
                    <div class="comentario-content">
                        <p class="comment-text">@c.CommentText</p>
                    </div>
                </article>
            }
        }
        else
        {
            <div class="aviso-vazio">
                <i class="fa-regular fa-comment-dots"></i>
                <p>Ainda não há comentários. Seja o primeiro a comentar!</p>
            </div>
        }
    </div>

    <section class="comentarios-form-section">
        <div class="comentarios-form">
            <h3><i class="fa-solid fa-pen-to-square"></i> Deixe a sua opinião</h3>
            <form method="post">
                <input type="hidden" asp-for="RecipeId" />

                <div class="rating-input-group">
                    <label>A sua avalaição</label>
                    <select asp-for="Rating" class="form-select-stars">
                        <option value="5">⭐⭐⭐⭐⭐ (Incrível)</option>
                        <option value="4">⭐⭐⭐⭐ (Muito bom)</option>
                        <option value="3">⭐⭐⭐ (Bom)</option>
                        <option value="2">⭐⭐ (Razoável)</option>
                        <option value="1">⭐ (Fraco)</option>
                    </select>
                </div>

                <div class="form-group">
                    <textarea asp-for="Message" class="form-control-modern" rows="4"
                            placeholder="O que achou desta receita? Dê dicas ou sugestões..."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn-publicar">
                        <i class="fa-solid fa-paper-plane"></i> Publicar Comentário
                    </button>
                </div>
            </form>
        </div>
    </section>
</main>
