@page
@model ProjetoAssembly_Final.Pages.settingsModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Defenições"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/settings.css" asp-append-version="true" />
}

<main class="container">
    <div class="settings-container">        
        <div class="settings-header">
            <i class="fa-solid fa-user-gear fa-2x"></i>
            <h2>@Localizer["Defenições"]</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-alert-container">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        }
    
        <form method="post" enctype="multipart/form-data">        
            <div class="profile-upload-section">
                <div class="avatar-wrapper">
                    <img src="~/img/user.icon.png" id="previewImg" class="profile-img-large" alt="Preview">
                    <label for="fileInput" class="btn-change-photo-mini">
                        <i class="fa-solid fa-camera"></i>
                    </label>
                </div>               
                <input type="file" id="fileInput" name="UserPhoto" style="display:none" accept="image/*">
                <p class="upload-hint">@Localizer["Clique na câmara para alterar a foto"]</p>
            </div>

            <div class="settings-grid">
                <div class="form-group">
                    <label>@Localizer["Nome"]</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder=@Localizer["O seu nome"]">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>@Localizer["Nome de Utilizador (Nickname)"]</label>
                    <input type="text" asp-for="UserName" class="form-control" placeholder=@Localizer["O seu nickname"]">
                    
                </div>

                <div class="form-group">
                    <label>@Localizer["Email"]</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="exemplo@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="preferences-section full-width">
                    <h4><i class="fa-solid fa-sliders"></i> @Localizer["Preferências do Sistema"]</h4>
                    <p class="text-muted">@Localizer["Personalize a sua experiência na plataforma."]</p>
                </div>

                <div class="form-group">
                    <label asp-for="InputTheme">@Localizer["Tema"]</label>
                    <select asp-for="InputTheme" class="form-control">
                        <option value="Light">@Localizer["Modo Claro"]o</option>
                        <option value="Dark">@Localizer["Modo Escuro"]</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="InputLanguage">@Localizer["Idioma"]</label>
                    <select asp-for="InputLanguage" class="form-control">
                        <option value="pt-PT">Português (Portugal)</option>
                        <option value="en-US">English (US)</option>
                    </select>
                </div>

                <div class="form-group full-width">
                    <label class="checkbox-group">
                        <input type="checkbox" asp-for="InputNotifications" />
                        <span>@Localizer["Desejo receber notificações e novidades por email"]</span>
                    </label>
                </div>
            </div>

            <div class="form-group full-width">
                <h4><i class="fa-solid fa-lock"></i> @Localizer["Alterar a Palavra-passe"]</h4>
                <p class="text-muted">@Localizer["Deixe em branco se não quiser alterar."]</p>
            </div>

            <div class="form-group">
                <label>@Localizer["Nova Palavra-passe"]</label>
                <input type="password" asp-for="NewPassword" class="form-control" placeholder="@Localizer["Nova palavra-passe"]" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>@Localizer["Confirmar Nova Palavra-passe"]</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@Localizer["Confirme a nova palavra-passe"]" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="settings-actions">
                <button type="submit" class="btn-save">
                    <i class="fa-solid fa-floppy-disk"></i> @Localizer["Guardar Alterações"]
                </button>
                <a asp-page="/perfil" class="btn-cancel">
                    <i class="fa-solid fa-xmark"></i> @Localizer["Cancelar e Sair"]
                </a>
            </div>                    
        </form>
    </div>
</main>

@section Scripts {
    <script>
        document.getElementById('fileInput').addEventListener('change', function (event){
            const file = event.target.files[0];
            if(this){
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImg').setAttribute('src', e.target.result);
                }
                reader.readAsDataURL(file);
            }
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
