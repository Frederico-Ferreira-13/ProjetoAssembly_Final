@page
@model ProjetoAssembly_Final.Pages.MyFavoritsRecipesModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Os Meus Favoritos"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/recipe.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/favorits.css" asp-append-version="true" />
}

<div class="container-main">
    <section class="destaques-home">
        <h2 class="section-title">
            <i class="fa-solid fa-heart" style="color: #e74c3c;"></i> @Localizer["As Minhas Receitas Favoritas"]
        </h2>

        <div id="container-receitas" class="grid-receitas">
            @if(Model.MyFavoriteRecipes != null && Model.MyFavoriteRecipes.Any())
            {
                @foreach(var receita in Model.MyFavoriteRecipes)
                {
                    <partial name="_RecipesCard" model="receita" />
                }
            }
            else
            {
                <div class="aviso-vazio" style="grid-column: 1/-1; text-align: center; padding: 80px 20px;">
                    <i class="fa-regular fa-heart" style="font-size: 4rem; color: #ddd; margin-bottom: 20px;"></i>
                    <p>@Localizer["Ainda não guardaste nenhuma receita como favorita."]</p>
                    <a asp-page="/recipes" class="btn-principal" style="margin-top: 20px; display: inline-block;">
                        @Localizer["Explorar Receitas"]
                    </a>
                </div>
            }
        </div>
    </section>
</div>
