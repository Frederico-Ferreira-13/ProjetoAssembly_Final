@page
@model ProjetoAssembly_Final.Pages.MyFavoritsRecipesModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Os Meus Favoritos"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/recipe.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/favorits.css" asp-append-version="true" />
}

<div class="main-wrapper">
    <header class="favorites-header">
        <h1>
            <i class="fa-solid fa-heart" style="color: #e74c3c"></i>
            @Localizer["As Minhas Receitas Favoritas"]
        </h1>
        <p class="edit-subtitle">@Localizer["Todas as receitas que guardaste num só lugar."]</p>
    </header>
    
    <section class="recipe-section">
        <div id="recipe-container" class="favorites-grid">
            @if(Model.MyFavoriteRecipes != null && Model.MyFavoriteRecipes.Any())
            {
                @foreach(var recipe in Model.MyFavoriteRecipes)
                {
                    <partial name="_RecipesCard" model="recipe" />
                }
            }
            else
            {
                <div class="empty-state-notice">
                    <i class="fa-regular fa-heart"></i>
                    <p>@Localizer["Ainda não guardaste nenhuma receita como favorita."]</p>
                    
                    <a asp-page="/recipes" class="btn-explore">
                        @Localizer["Explorar Receitas"]
                    </a>
                </div>
            }
        </div>
    </section>
</div>
