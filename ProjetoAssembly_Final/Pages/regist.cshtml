@page
@model ProjetoAssembly_Final.Pages.registModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = null;
    ViewData["Title"] = Localizer["Criar Conta - Receitas do Frederico"];
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/pages/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global/layout.css" asp-append-version="true" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="back-to-home">
            <a asp-page="/Index" class="home-link">← @Localizer["Voltar à HomePage"]</a>
        </div>

        <h1>@Localizer["Criar Conta"]</h1>
       
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }       

        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <form id="registerForm" method="post">
            <div class="input-group">
                <label asp-for="Name">@Localizer["Primeiro e Último nome"]</label>
                <input asp-for="Name" type="text" required placeholder="Ex: Frederico Ferreira">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="UserName">@Localizer["Nome de Utilizador"]</label>
                <input asp-for="UserName" type="text" required placeholder="Ex: frederico_chef">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" type="email" required placeholder="exemplo@email.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password">Palavra-passe</label>
                <input asp-for="Password" type="password" required placeholder="********">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-auth">@Localizer["Registar"]</button>

            <div class="toggle-auth-link">
                <p>@Localizer["Já tem conta?"]<a href="/Login">@Localizer["Faça login aqui"]</a></p>                
            </div>           
        </form>
    </div>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
