@page
@model ProjetoAssembly_Final.Pages.contactsModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Contactos"];
}

<link rel="stylesheet" href="~/css/contacts.css"/>

<main class="container">   
    <div class="contact-header">
        <h1>@Localizer["Contactos"]</h1>
        <p>@Localizer["Tem alguma dúvida ou sugestão? Estamos aqui para ajudar!"]</p>                
    </div>

    <div class="contact-info-cards">               
        <div class="contact-card"> 
            <div class="contact-icon"><i class="fa-solid fa-phone"></i></div>
            <h3>@Localizer["Telefone"]</h3>
            <p>@Localizer["Segunda a Sexta, 9h às 18h"]</p>
            <a href="tel:916781293" class="btn-contact-action">916 781 293</a>
        </div>

        <div class="contact-card">
            <div class="contact-icon"><i class="fa-solid fa-envelope"></i></div>
            <h3>@Localizer["E-mail"]</h3>
            <p>Respondemos em 24h</p>
            <a href="malito:fredericocrf87@hotmail.com" class="btn-contact-action">Enviar E-mail</a>
        </div>
    </div>
               
    <div class="contact-form-wrapper">
        <h3>@Localizer["Envie-nos uma mensagem"]</h3>      

        <form method="post" class="custom-form">
            <div class="form-group">
                <label asp-for="Nome">@Localizer["Nome"]</label>
                <input asp-for="Nome" placeholder="@Localizer["O seu nome..."]" required />
            </div>

            <div class="form-group">
                <label asp-for="Email">@Localizer["E-mail"]</label>
                <input asp-for="Email" type="email" placeholder="exemplo@email.com" required />
            </div>
            <div class="form-group">
                <label asp-for="Mensagem">@Localizer["Mensagem"]"</label>
                <textarea asp-for="Mensagem" placeholder="@Localizer["Em que podemos ajudar?"]" required></textarea>
            </div>

            <button type="submit" class="btn-send">
                <span>@Localizer["Enviar Mensagem"]</span>
                <i class="fa-solid fa-paper-plane"></i>
            </button>
        </form>
    </div>
</main>
