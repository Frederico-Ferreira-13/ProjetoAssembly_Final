@page
@model ProjetoAssembly_Final.Pages.logoutModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProjetoAssembly_Final.Pages.IndexModel> Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Sair do Sistema"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/logout.css" asp-append-version="true" />
}

<div class="logout-wrapper">
    <div class="logout-container">
        <header class="logout-header">
            <h2>@Localizer["Até Breve!"]</h2>
            <p>@Localizer["Tens a certeza que pretendes terminar a sessão?"]</p>
        </header>       

        <div class="logout-actions">
            <form method="post" style="width: 100%">
                <button type="submit" class="logout-btn">
                    <div class="icon-container">
                        <svg class="doorway" viewBox="0 0 100 100">
                            <path d="M20,90 V10 H80 V90" fill="none" stroke="currentColor" stroke-width="6" />
                        </svg>
                        <svg class="door" viewBox="0 0 100 100">
                            <rect x="20" y="10" width="60" height="80" fill="currentColor" />
                            <circle cx="70" cy="50" r="3" fill="white" />
                        </svg>
                    </div>
                    <span class="button-text">@Localizer["Terminar Sessão"]</span>
                </button>
            </form>
            
            <a asp-page="/Index" class="cancel-btn"> 
                <i class="fa-solid fa-arrow-left"></i>@Localizer["Voltar ao Início"]</a>                     
        </div>
    </div>
</div>
    